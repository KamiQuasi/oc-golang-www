{
	"kind": "Template",
	"apiVersion": "v1",
	"metadata": {
		"name": "go-web-go",
		"annotations": {
			"description": "A simple and quick Golang web playground",
			"tags": "golang",
			"iconClass": "icon-golang"
		}
	},
	"labels": {
		"template": "go-web-go"
	},
	"objects": [{
		"kind": "Service",
		"apiVersion": "v1",
		"metadata": {
			"name": "go-web-go",
			"annotations": {
				"description": "Exposes and load balances the application pods"
			}
		},
		"spec": {
			"ports": [{
				"name": "web",
				"port": 8024,
				"targetPort": 8024
			}],
			"selector": {
				"name": "go-web-go"
			}
		}
	}, {
		"kind": "Route",
		"apiVersion": "v1",
		"metadata": {
			"name": "goweb"
		},
		"spec": {
			"host": "${APPLICATION_DOMAIN}",
			"to": {
				"kind": "Service",
				"name": "go-web-go"
			}
		}
	}, {
		"kind": "ImageStream",
		"apiVersion": "v1",
		"metadata": {
			"name": "go-web-go",
			"annotations": {
				"description": "Keeps track of changes in the application image"
			}
		}
	}, {
		"kind": "BuildConfig",
		"apiVersion": "v1",
		"metadata": {
			"name": "go-web-go",
			"annotations": {
				"description": "Defines how to build the application"
			}
		},
		"spec": {
			"source": {
				"type": "Git",
				"git": {
					"uri": "${SOURCE_REPOSITORY_URL}",
					"ref": "${SOURCE_REPOSITORY_REF}"
				},
				"contextDir": "${CONTEXT_DIR}"
			},
			"strategy": {
				"type": "Docker"
			},
			"output": {
				"to": {
					"kind": "ImageStreamTag",
					"name": "go-web-go:latest"
				}
			},
			"triggers": [{
				"type": "ConfigChange"
			}, {
				"type": "GitHub",
				"github": {
					"secret": "${GITHUB_WEBHOOK_SECRET}"
				}
			}],
			"postCommit": {
				"script": "go test -v ./..."
			}
		}
	}, {
		"kind": "PersistentVolumeClaim",
		"apiVersion": "v1",
		"metadata": {
			"name": "go-web-go"
		},
		"spec": {
			"resources": {
				"requests": {
					"storage": "1Gi"
				}
			},
			"accessModes": [
				"ReadWriteOnce"
			],
            "volumeName": "go-web-go"
		}
	}, {
		"kind": "DeploymentConfig",
		"apiVersion": "v1",
		"metadata": {
			"name": "go-web-go",
			"annotations": {
				"description": "Defines how to deploy the application server"
			}
		},
		"spec": {
			"strategy": {
				"type": "Rolling"
			},
			"replicas": 1,
			"selector": {
				"name": "go-web-go"
			},
			"triggers": [{
				"type": "ImageChange",
				"imageChangeParams": {
					"automatic": true,
					"containerNames": [
						"go-web-go"
					],
					"from": {
						"kind": "ImageStreamTag",
						"name": "go-web-go:latest"
					}
				}
			}, {
				"type": "ConfigChange"
			}],
			"template": {
				"metadata": {
					"name": "go-web-go",
					"labels": {
						"name": "go-web-go"
					}
				},
				"spec": {
					"containers": [{
						"name": "go-web-go",
						"image": "go-web-go",
                        "volumeMounts": [{
							"mountPath": "/tmp",
							"name": "go-web-go"
						}],
						"ports": [{
							"containerPort": 8024
						}]
					}],
                    "volumes": [{
                        "name": "go-web-go",
                        "persistentVolumeClaim": {
                            "claimName": "go-web-go"
                        }
                    }]
				}
			}
		}
	}],
	"parameters": [{
		"name": "SOURCE_REPOSITORY_URL",
		"description": "The URL of the repository with your application source code",
		"value": "https://github.com/KamiQuasi/oc-golang-www.git"
	}, {
		"name": "SOURCE_REPOSITORY_REF",
		"description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch"
	}, {
		"name": "CONTEXT_DIR",
		"description": "Set this to the relative path to your project if it is not in the root of your repository"
	}, {
		"name": "APPLICATION_DOMAIN",
		"description": "The exposed hostname that will route to the go-web-go service",
		"value": "goweb"
	}, {
		"name": "GITHUB_WEBHOOK_SECRET",
		"description": "A secret string used to configure the GitHub webhook",
		"generate": "expression",
		"from": "[a-zA-Z0-9]{40}"
	}]
}